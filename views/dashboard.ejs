<link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.4.0/css/font-awesome.min.css">
<body ng-app="dashboardModule" ng-controller="dashboardController" ng-cloak>

<div class="container-fluid">
  <!-- Creates the navbar -->
  <div class="navbar navbar-default navbar-inverse">
    <!-- This creates the mechanism for collapse button -->
    <button type="button" class="navbar-toggle" data-toggle="collapse" ng-init="navCollapsed = true" ng-click="navCollapsed = !navCollapsed">
      <!-- This controls the number of lines in the image when the nav collapse -->
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>

    <!-- This is the brand on the left-hand side. -->
    <a class="navbar-brand" href="/#"> SkyCast </a>
    <div class="collapse navbar-collapse" ng-class="!navCollapsed && 'in'">
      <form ng-submit="submitLogoutForm()" class="navbar-form navbar-right">
        <button type="submit" class="btn btn-danger">
          <span>Sign out</span>
        </button>
      </form>
    </div>
  </div>

  <div class="row col-sm-6 col-sm-offset-3" style="margin-top: 50px;">
    <div class="input-group">
      <input type="text" class="form-control" ng-model="keyword" placeholder="Space Needle...">
        <span class="input-group-btn">
          <button class="btn btn-secondary" ng-click="search()" type="button">Search</button>
        </span>
    </div>
  </div>

  <div id="dashboard" class="row" style="margin-top: 50px;margin-left: auto;margin-right: auto;width: 950px;">
  </div>

  <div ng-show="response" class="row col-sm-8 col-sm-offset-2" style="margin-top: 50px;">
    <pre>
      {{response | json}}
    </pre>
  </div>

  <script src="http://d3js.org/d3.v3.min.js"></script>

</div>



</body>
